{
  "name": "webgpu",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:ci": "vitest run",
    "preview": "vite preview",
    "prepare": "husky install",
    "format": "prettier --write \"{src,test}/**/*.ts\""
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@webgpu/types": "^0.1.51",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
  "lint-staged": {
    "**/*.{ts,html}": "prettier --write"
  }
}
